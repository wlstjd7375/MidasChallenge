<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/ivTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:src="@drawable/ic_mynah"
                android:layout_weight="31" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#030303"
                android:textSize="15sp"
                android:text="Mynah"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitleText1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#030303"
                android:textSize="10sp"
                android:text="Server"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_v"/>

            <TextView
                android:id="@+id/tvTitleText2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#030303"
                android:textSize="10sp"
                android:text="Bluetooth"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_v"/>

            <!--<TextView-->
                <!--android:id="@+id/tvTitleText3"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:textColor="#030303"-->
                <!--android:textSize="10sp"-->
                <!--android:text="Mynah Device"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginLeft="10dp"/>-->

            <!--<ImageView-->
                <!--android:id="@+id/ivIcon3"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:src="@drawable/ic_v"/>-->

            <TextView
                android:id="@+id/tvTitleText4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#030303"
                android:textSize="10sp"
                android:text="update 00:00"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:layout_marginRight="5dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>