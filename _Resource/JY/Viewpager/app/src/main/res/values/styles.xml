<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>  <!--타이틀배경색-->
        <item name="colorPrimaryDark">@android:color/transparent</item> <!--status bar 색-->
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">0.5dp</item>
        <item name="android:textColor">#323438</item>
        <item name="tabSelectedTextColor">#323438</item>
    </style>

</resources>
